@inject NavigationManager _navigationManager
<MudDialog>
    <DialogContent>
        <MudAlert Severity="Severity.Success">Donacion Completada correctamente.</MudAlert>
    </DialogContent>
    <DialogActions>
        <MudButton Href = "" Color="Color.Info" OnClick="submitt">Aceptar</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    void Cancel() => MudDialog.Cancel();

    private void submitt()
    {
       MudDialog.Close(DialogResult.Ok(true));
       _navigationManager.NavigateTo("", true);

    } 
}